        <!-- wrapper -->
        <!--<div ng-view></div>-->
        <!--I can add: {{ 1+2 }}.-->

        <!--<div ng-controller="SampleCtrl">-->
            <!--<span ng-bind="lorem" />-->
        <!--</div>-->
        <style type="text/css">
            html, body {
                margin: 0;
                height: 100%;
                background-color: /*#4E4E4E*/#333333;
            }
            #main-container {
                border: 1px dashed yellowgreen;
                height: 100%;
                display: flex;
                flex-direction: column;
                margin: 20px;
            }
            /* http://css-tricks.com/equidistant-objects-with-css/ */
            #manager {
                border: 1px dashed brown;
                display: flex;
                justify-content: space-around;
                height: 40px;
            }
            #middle-container {
                border:1px dashed #00B7FF;
                display: flex;
                margin-top: 20px;
                flex-grow: 1;
            }
            /*#manager:after {
                content: '';
                width: 100%;
                display: inline-block;
            }*/
            #manager div { /* Commands */
                border-radius: 50%;
                width: 40px;
                height: 40px;
                border: 2px solid #fff;
                display: inline-block;
                text-align: center;
                line-height: 40px;
                color: #fff;
            }
            #play-pause {
                border-radius: 50%;
                width: 60px;
                height: 60px;
                border: 2px solid #fff;
                display: inline-block;
                text-align: center;
                line-height: 60px;
                color: #fff;
            }
            #previous, #next {
                border-radius: 50%;
                width: 35px;
                height: 35px;
                border: 2px solid #fff;
                display: inline-block;
                text-align: center;
                line-height: 35px;
                color: #fff;
            }
            #play-pause img{
                margin-top: 9px;
                margin-left: 8px;
            }
            #manager div:hover {
                background-color:#3D8821;
            }
            /*#manager div:active {
                width: 35px;
                height: 35px;
            }*/
            #manager img{
                margin-top: 8px;
                margin-left: 1px;
            }
            #playlists-container, #medias-container {
                border:1px dashed red;
                width: 20%;
                background-color: #cbcbcb;
            }
            #playlists-container ol, #medias-container ol {
                list-style-type: none;
                padding: 0;
            }
            #playlists-container li:nth-child(odd), #medias-container li:nth-child(odd) {
                background-color: #8BE2FF;
            }
            #playlists-container li:nth-child(even), #medias-container li:nth-child(even) {
                background-color: #fff5d6;
            }

            #file-explorer {
                border:1px dashed greenyellow;
            }
            #command-bar {
                height: 80px;
            }
            #play-control {

            }
        </style>

        <div id="main-container">

            <div id="manager">
                <div id="add"><img src="svg/plus.svg" /></div>
                <div id="remove"><img src="svg/minus.svg" /></div>
                <div id="down"><img src="svg/down.svg" /></div>
                <div id="up"><img src="svg/up.svg" /></div>
                <div id="copy">Copy</div>
                <div id="cut">Cut</div>
                <div id="paste">Paste</div>
                <div id="undo">Undo</div>
                <div id="redo">Redo</div>
                <div id="settings">Settings</div>
                <div id="about">About</div>
            </div>

            <div id="middle-container">

                <div id="playlists-container">
                    <ol>
                        <li>Playlist 1</li>
                        <li>Playlist 2</li>
                        <li>Playlist 3</li>
                        <li>Playlist 4</li>
                    </ol>
                </div>

                <div id="medias-container">
                    <ol>
                        <li>Media 1</li>
                        <li>Media 2</li>
                        <li>Media 3</li>
                        <li>Media 4</li>
                    </ol>
                </div>

                <div id="file-explorer"></div>

            </div>

            <div id="command-bar">

                <div id="timeline">

                </div>

                <div id="play-control">
                    <div id="previous">|<</div>
                    <div id="play-pause"><img src="svg/play.svg" /></div>
                    <div id="next">>|</div>
                </div>

            </div>

        </div>

        <!--<div>Angular seed app: v<span app-version></span></div>-->
        <!-- In production use:-->
        <!--<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.15/angular.min.js"></script>-->

        <script src="lib/angular/angular.js"></script>
        <script src="lib/angular-animate/angular-animate.js"></script>
        <script src="lib/angular-resource/angular-resource.js"></script>
        <script src="lib/angular-route/angular-route.js"></script>
        <!-- build:js ../build/js/app.min.js -->
        <script src="js/controllers.js"></script>
        <script src="js/app.js"></script>

        <script src="js/services.js"></script>
        <script src="js/filters.js"></script>
        <script src="js/directives.js"></script>
        <!-- endbuild -->        
    </body>
</html>