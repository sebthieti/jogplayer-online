{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["es6", "es2015", "dom"],
    "pretty": false,
    "noImplicitAny": false,
    "outDir": "./build",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "node"
    ]
  },

  "exclude": [
    "node_modules",
    "app"
  ]
}
